package ch2_14;

public class Bus {
	private int busNumber;
	private int passengerCount;
	private int money;
	private final int COST = 1000;
	
	public Bus(int busNumber) {
		this.busNumber = busNumber;
	}
	
	public int take() {
		this.money += this.COST;
		passengerCount++;
		
		return this.COST;
	}

}
